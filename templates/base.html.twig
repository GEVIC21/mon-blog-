<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>Blog - {% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
         {# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous"> #}

            {# <link rel="stylesheet" href="{{ asset('build/css/bootstrap.min.css') }}">  #}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {# //   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script> #}

{# 
             <script src="{{ asset('build/js/bootstrap.bundle.min.js') }}"></script> #}
        {% endblock %}
    </head>
    <body>
        <nav class="py-2 bg-dark border-bottom">
            <div class="container d-flex flex-wrap">
                <div class="dropdown">
                    <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Mon blog
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminDashboard">
                        <li><a class="dropdown-item" href="{{path('admin')}}">Tableau de bord</a></li>
                        <li><a class="dropdown-item" href="#">Menus</a></li>
                    
                    </ul>
                </div>

                  <div class="dropdown">
                    <a class="nav nav-link dropdown-toggle text-white" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Ajouter
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButtonAdminAdd">
                        <li><a class="dropdown-item" href="#">Article</a></li>
                        <li><a class="dropdown-item" href="#">Page</a></li>
                    
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container">
                <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottem">
                    <a class="d-flex align-items-center mb-3 mb-mb-0 me-md-auto text-dark text-decoration-none" href="{{path("app_home")}}">
                        <span class="fs-4">Mon blog</span>
                    </a>

                    <ul class="nav nav-pills ">
                        {% if not is_granted("IS_AUTHENTICATED_FULLY") %}
                      
                            <li class="nav-item">
                                <a class="nav-link text-dark"  href="{{ path("app_register") }} ">S'inscrire</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark"  href="{{ path("app_login") }}">Se connecter</a>
                            </li>
                            {% else %}
                                <div class="dropdown">
                                    <a class="nav nav-link text-dark dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expended="false">
                                        {{ app.user.email|capitalize }}  
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <a class="dropdown-item" href="#">Mon profil</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="{{path('app_logout')}}">Deconnexion</a>
                                        </li>
                                    </ul>
                            
                                </div>
                        {% endif %}

                    </ul>
                </header>

        </div>
        {% block body %}{% endblock %}

        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <div class="col-md-4 d-flex align-items-center">
                    <span class="copyright">@ {{'now'|date("Y")}} Douvic. Tous droits réservés.</span>
                </div>
            </footer>
        </div>
    </body>
</html>
